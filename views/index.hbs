    <div class="container">
      <div class="blockquote">
        <blockquote>
        <h2>{{title}}</h2>
        <p>View and book available mentor slots, check out upcoming and past mentors, be awesome.</p><br />
        </blockquote>
      </div><br />

      <ul class="nav nav-tabs">
          <li id="allTrackTab" role="presentation"><a href="/mentors">All-track</a></li>
          <li id="engTab" role="presentation"><a href="/mentors/eng">Engineering</a></li>
          <li id="pdTab" role="presentation"><a href="/mentors/pd">UX/Product Design</a></li>
          <li id="growthTab" role="presentation"><a href="/mentors/growth">Growth</a></li>
          <li id="salesTab" role="presentation"><a href="/mentors/sales">Sales/BD</a></li>
      </ul><br />

      <div class="panel panel-info">
        <div class="panel-heading">
          <h4>All-track: Open Mentor Slots <small>Pick a slot, click Book Now, fill out the form and then click Send Invite</small></h4> 
        </div>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Day/Time</th>
              <th>Book this slot</th>
            </tr>
          </thead>
          <tbody>
            {{#each slots}}
            <tr>
                <td>
                  {{this}}
                </td>
              <td><a id="formLink" class="btn btn-primary btn-xs" role="button" target="_blank">Book now</a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div><br />

      <div class="panel panel-success">
        <div class="panel-heading">
          <h4>Upcoming Mentors <small>View and book available mentor slots</small></h4> 
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>Title</th>
              <th>Company</th>
              <th>Owner</th>
              <th>Export to gCal</th>
            </tr>
          </thead>
          <tbody>
            {{#each upcoming}}
            <tr>
              <th>{{datetime}}</th>
              <a href="{{link}}"> <td>{{engmentorname}}</td></a>
              <td>blah</td>
              <td>blah</td>
              <td>{{student}}</td>
              <td><a href="#" class="btn btn-danger btn-xs" role="button">Create Event</a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div><br />

      <div class="panel panel-warning">
        <div class="panel-heading">
          <h4>Past Mentors <small>Previous mentors, info and links to audio</small></h4>
        </div>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Name</th>
              <th>Title</th>
              <th>Company</th>
              <th>Owner</th>
            </tr>
          </thead>
          <tbody>
            {{#each past}}
            <tr>
              <th>{{datetime}}</th>
              <td>{{engmentorname}}</td>
              <td>blah</td>
              <td>blah</td>
              <td>{{student}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div><br />

    <hr>

