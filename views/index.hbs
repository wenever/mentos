    <script>
      $(document).ready(function() {
        var trackTab = location["pathname"].replace("/mentors/", "");

        switch (trackTab) {
          case "eng": 
            $("#engTab").addClass("active")
            $("#formLink").attr("href", "http://goo.gl/forms/qmgKtfImJH")
            break;
          case "pd": 
            $("#pdTab").addClass("active")
            $("#formLink").attr("href", "http://goo.gl/forms/CBdQifPVMp")
            break;
          case "sales": 
            $("#salesTab").addClass("active")
            $("#formLink").attr("href", "http://goo.gl/forms/eZhpXe5Sur")
            break;
          case "growth": 
            $("#growthTab").addClass("active")
            $("#formLink").attr("href", "http://goo.gl/forms/f3ew0ZDQ9V")
            break;
          default: 
            $("#allTrackTab").addClass("active")
            $("#formLink").attr("href", "http://goo.gl/forms/3cxmi9HAa2")
        }
      })
    </script>